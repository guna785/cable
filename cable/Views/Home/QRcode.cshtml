
@{
    ViewData["Title"] = "QRcode";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>QR Code</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                   
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var itm in ViewBag.lst)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                Zone Name : @itm.zone
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>Customer ID : @itm.cid</b></h2>
                                        <p class="text-muted text-sm"><b>Name: </b> @itm.name </p>
                                       
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="data:image/png;base64,@Convert.ToBase64String(itm.img)" alt="user-avatar" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                               
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <nav aria-label="Contacts Page Navigation">
